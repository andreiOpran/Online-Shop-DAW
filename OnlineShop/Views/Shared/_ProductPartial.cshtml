@model OnlineShop.Models.Product

<div class="card-body">

    <h3 class="card-title alert-success py-3 px-3 rounded-2">@Model.Title</h3>

    <div class="card-text">@Html.Raw(Model.Description)</div>

    <div class="d-flex justify-content-between flex-row mt-5">

        <div><i class="bi bi-globe"></i> Category: @Model.Category.CategoryName</div>

        <div><i class="bi bi-globe"></i> Price: @Model.Price?.ToString("F2")</div>

        <div><i class="bi bi-calendar"></i> @Model.CreatedDate</div>

    </div>

</div>

