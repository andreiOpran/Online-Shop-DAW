@model OnlineShop.Models.Product

<h2 class="text-center mt-5">Edit Product</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            <form method="post" asp-action="Edit" asp-controller="Products" asp-route-id="@Model.ProductId" enctype="multipart/form-data">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="from-group">
                    <label asp-for="Title" class="form-label">Product Name</label>
                    <br />
                    <input asp-for="Title" class="form-control" />
                    <br />
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Product Description</label>
                    <br />
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <br />
                    <br />
                </div>

                <div class="form-group">
                    <label for="Image" class="control-label mb-2">Change Image (<strong>No file chosen</strong> means you are choosing not to edit the image)</label>
                    <input type="file" name="Image" class="form-control" />
                    <input type="hidden" asp-for="ImagePath" />
                    <br />
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="form-label">Product Price</label>
                    <br />
                    <input asp-for="Price" class="form-control" />
                    <br />
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="Stock" class="form-label">Product Stock</label>
                    <br />
                    <input asp-for="Stock" class="form-control" />
                    <br />
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="SalePercentage" class="form-label">Product Sale Percentage</label>
                    <br />
                    <input asp-for="SalePercentage" class="form-control" />
                    <br />
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId" class="form-label">Select Category</label>
                    <br />
                    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
                        <option value="">Select Category</option>
                    </select>
                    <br />
                    <br />
                </div>

                <button class="btn btn-sm btn-primary" type="submit">Edit Product</button>
                

            </form>

            <br />
        
        </div>
    </div>
</div>

