                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>

                    <br />

                    <label>Review description</label>
                    <br />

                    <textarea name="Content" class="form-control"></textarea>

                    @* TODO - validare *@

                    <br />

                </div>

            </div>

        </div>

    </div>

</div>

