    <div class="row">

        <div class="col-md-2"></div>

        <div class="col-md-8">

            <div class="card">

                <form method="post" asp-controller="Products" asp-action="Show"></form>

                <div class="card-body">

                    <input type="hidden" name="ProductId" value="@Model.ProductId" />

                    <label>Rating</label>
                    <br />

                    <select name="Rating" class="form-control">
                        <option value="1">1</option>
