@if (TempData["message"] != null)
{
    <div class="alert @TempData["messageType"] p-3 rounded-3 text-center mb-5">
        @TempData["message"]
    </div>
}

<br />

<div>
    <div class="card">
        <div class="card-body">
            <hr />

            <p><i class="bi bi-person"></i> Created by: @Model.User.UserName</p>
            <p><i class="bi bi-key"></i> User ID: @Model.UserId</p>
            <p><i class="bi bi-cart-fill"></i> Cart ID: @Model.CartId</p>

            <h6>Products in Cart:</h6>
            @if (Model.CartProducts != null)
            {
                <div class="d-flex flex-column gap-3">
                    @foreach (var cartProduct in Model.CartProducts)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@cartProduct.Product.Title</h5>
                                <p class="card-text">@Html.Raw(cartProduct.Product.Description)</p>
                                <p><strong>Price:</strong> @cartProduct.Product.Price?.ToString("F2")</p>
                                <p><strong>Quantity:</strong> @cartProduct.Quantity</p>

                                <div class="d-flex align-items-center gap-2 mt-3">
                                <form asp-controller="Carts" asp-action="IncreaseQuantityShowById" method="post" asp-route-cartId="@Model.CartId">
                                    <input type="hidden" name="productId" value="@cartProduct.ProductId" />
                                    <button type="submit" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-plus-circle"></i>
                                    </button>
                                </form>

                                <form asp-controller="Carts" asp-action="DecreaseQuantityShowById" method="post" asp-route-cartId="@Model.CartId">
                                    <input type="hidden" name="productId" value="@cartProduct.ProductId" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-dash-circle"></i>
                                    </button>
                                </form>
                                </div>
                                
                            </div>



                            </div>
                       
                    }
                </div>
            }
            else
            {
                <p>No products in this cart.</p>
            }

            <hr />
            <h5>Total Order Price: <strong>@ViewBag.TotalPrice</strong></h5>

            <div class="mt-3">
                <a asp-controller="Carts" asp-action="Index"
                   class="btn btn-sm w-100"
                   style="background-color:#A74DBA; color: white; border: none;">
                    <i class="bi bi-arrow-left"></i> Back to Carts
                </a>
            </div>
        </div>
    </div>
</div>
