@model OnlineShop.Models.Order

<h2 class="text-center mt-5">Add Order</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form method="post" asp-action="New" asp-controller="Orders" asp-route-id="@Model.CartId">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label for="PaymentMethod">Select Payment Method</label>
                    <br />
                    <select asp-for="PaymentMethod" asp-items="Model.Categ" class="form-control">
                        <option value="">-- Select Payment Method --</option>
                    </select>

                    <!-- Mesaj de validare pentru PaymentMethod -->
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>

                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="ShippingAddress" class="form-label">Shipping Address</label>
                    <br />
                    <input asp-for="ShippingAddress" class="form-control" />

                    <!-- Mesaj de validare pentru ShippingAddress -->
                    <span asp-validation-for="ShippingAddress" class="text-danger"></span>

                    <br /><br />
                </div>

                <button class="btn btn-success" type="submit">Place Order</button>

            </form>
        </div>
    </div>
</div>